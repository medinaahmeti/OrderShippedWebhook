{% block element_banner_slider %}
    {% set slides = element.config.sliderItems.value %}
    <div id="bannerSlider-{{ element.id }}" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% set firstSlide = true %}
            {% for item in slides %}
                {% if item.mediaId %}
                    <div class="carousel-item {% if firstSlide %}active{% endif %}">
                        {% set mediaCollection = searchMedia([item.mediaId], context.context) %}
                        {% set mediaObj = mediaCollection.get(item.mediaId) %}
                        {% if mediaObj %}
                            <img src="{{ mediaObj.url }}" class="d-block w-100" alt="{{ mediaObj.url }}">
                        {% endif %}

                        {% if item.text %}
                            <div class="carousel-caption d-md-block">
                                <p class="banner-text">{{ item.text }}</p>
                            </div>
                        {% endif %}
                    </div>
                    {% set firstSlide = false %}
                {% endif %}
            {% endfor %}
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#bannerSlider-{{ element.id }}"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerSlider-{{ element.id }}"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

        <div class="carousel-indicators">
            {% set index = 0 %}
            {% for item in slides %}
                {% if item.mediaId %}
                    <button type="button" data-bs-target="#bannerSlider-{{ element.id }}" data-bs-slide-to="{{ index }}"
                            {% if index == 0 %}class="active"{% endif %}></button>
                    {% set index = index + 1 %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
